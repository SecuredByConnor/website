---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Projects" description="Tools and projects I'm working on" />
  </head>
  <body>
    <Header />
    <main>
      <h1>Projects</h1>
      <p>This page lists the tools and projects I have built or am currently working on.</p>

      <div style="display: grid; gap: 1rem; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); padding: 1rem;">
  
    <a href="https://github.com/SecuredByConnor/port-scanner" style="border: 1px solid #ddd; padding: 1rem; border-radius: 8px; text-decoration: none;">
        <h2>Port Scanner</h2>
        <p>A simple tool to scan a single host or IP address.</p>
    </a>

  
</div>


    </main>
    <Footer />
  </body>
</html>
